<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Категория -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/categoryInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/categoryAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Выберите категорию"
            android:inputType="none"
            android:clickable="true"
            android:focusable="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Описание -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/descriptionInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/categoryInputLayout"
        android:layout_marginTop="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Описание"
            android:inputType="textCapSentences"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Три кнопки в ряд (объединенные) -->
    <LinearLayout
        android:id="@+id/buttonGroup"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:background="@drawable/button_group_background"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/descriptionInputLayout">

        <!-- 1. Заплатить за себя -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOnePerson"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1 человек"
            android:textColor="@color/black"
            android:drawableTop="@drawable/ic_person"
            app:iconGravity="textTop"
            app:iconSize="48dp"
            app:iconTint="@color/black"
            app:backgroundTint="@color/hint_color"
            style="@style/Widget.MaterialComponents.Button"/>

        <!-- 2. Оплатить поровну -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSplitEqually"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Поровну"
            android:textColor="@color/black"
            app:iconGravity="textTop"
            app:iconSize="48dp"
            app:iconTint="@color/black"
            app:backgroundTint="@color/hint_color"
            style="@style/Widget.MaterialComponents.Button"/>

        <!-- 3. Добавить участника -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddParticipant"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Добавить"
            android:textColor="@color/black"
            android:drawableTop="@drawable/ic_add"
            app:iconGravity="textTop"
            app:iconSize="48dp"
            app:iconTint="@color/black"
            app:backgroundTint="@color/hint_color"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>


    <!-- Участники -->
    <TextView
        android:id="@+id/tvParticipantsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Участники"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/buttonGroup"
        android:layout_marginTop="24dp"/>

    <!-- RecyclerView с участниками -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_participants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvParticipantsTitle"
        app:layout_constraintBottom_toTopOf="@id/btn_create"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        tools:listitem="@layout/item_participant"/>

    <!-- Кнопка Создать -->
    <Button
        android:id="@+id/btn_create"
        style="@style/PrimaryButtonStyle"
        android:layout_marginTop="128dp"
        android:text="Создать"
        app:backgroundTint="@color/yellow"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>