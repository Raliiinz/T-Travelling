<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <View
            android:id="@+id/shimmerDestination"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/shimmer_placeholder"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_back_icon"
            tools:ignore="NotSibling" />

        <View
            android:id="@+id/shimmerDates"
            android:layout_width="140dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_placeholder"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shimmerDestination" />

        <View
            android:id="@+id/shimmerPrice"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shimmer_placeholder"
            app:layout_constraintBottom_toTopOf="@id/shimmerParticipantsTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/shimmerParticipantsTitle"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shimmer_placeholder"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shimmerDates" />

        <LinearLayout
            android:id="@+id/shimmerParticipantsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shimmerParticipantsTitle">

            <View
                android:layout_width="136dp"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shimmer_placeholder" />

            <View
                android:layout_width="136dp"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shimmer_placeholder" />

            <View
                android:layout_width="136dp"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:background="@drawable/shimmer_placeholder" />
        </LinearLayout>

        <View
            android:id="@+id/shimmerButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/shimmerParticipantsList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>