<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовый стиль для TextInputLayout -->
    <style name="BaseTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gray_field_background</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
    </style>

    <!-- Стандартный TextInputLayout -->
    <style name="MyTextInputLayoutStyle" parent="BaseTextInputLayoutStyle">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- TextInputLayout для пароля с toggle -->
    <style name="PasswordTextInputLayoutStyle" parent="BaseTextInputLayoutStyle">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconDrawable">@drawable/ic_eye_closed</item>
        <item name="endIconTint">@color/hint_color</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <!-- Стиль для кнопки -->
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_button_yellow</item>
        <item name="android:textColor">@color/gray_button</item>
    </style>

    <!-- Стиль для EditText внутри TextInputLayout -->
    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Back button container style -->
    <style name="BackButtonContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <!-- Back text style -->
    <style name="BackText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>