<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gray_field_background</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="BaseTextInputLayoutStyle">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="PasswordTextInputLayoutStyle" parent="BaseTextInputLayoutStyle">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconDrawable">@drawable/ic_eye_closed</item>
        <item name="endIconTint">@color/hint_color</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_button_yellow</item>
        <item name="android:textColor">@color/design_default_color_on_secondary</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="BottomNavigationIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_nav_indicator</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:layout_height">64dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="itemIconTint">@drawable/bottom_nav_icon_color</item>
        <item name="itemTextColor">@drawable/bottom_nav_icon_color</item>
        <item name="android:background">@color/bottom_nav_background</item>
        <item name="itemActiveIndicatorStyle">@style/BottomNavigationIndicator</item>
        <item name="android:elevation">0dp</item>
        <item name="materialThemeOverlay">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="backgroundTintMode">src_over</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorSecondary">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorOnSurface">@color/blue</item>
    </style>

